{% extends 'main.twig' %}

{% block content %}

    <div class="container" style="max-width: 400px; padding-top: 75px;">
        <h3>Passord gjenopprettelse</h3>

        <form action="newPassword.php" method="post">

            <div class="form-group">

                <input id="changePass" type="password" class="form-control" name="passChange" placeholder="Skriv inn nytt passord"
                       required>
            </div>

            <div class="form-group">
                <input id="changePassRepeat" type="password" class="form-control" name="passChangeRepeat" placeholder="Gjenta passord"
                       required>
            </div>
            <input type="hidden" name="rec_id_pass" value="{{ rec_id }}"/>

           <h6 id="error"></h6>

            <input type="submit" class="btn btn-primary" id="submit" name="saveNewPass" value="Gjenopprett">

        </form>
    </div>



{% endblock %}

    {% block bodyscripts %}

        <script src="js/ValidatePassword.js"></script>

    {% endblock %}
